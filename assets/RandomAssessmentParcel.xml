<?xml version="1.0"?>
<root>    
    <category>
		<description>Recent Drinking</description>
		<question id = "q11" type = "radio">
			<text>Have you CONSUMED ALCOHOL since the last survey you answered?</text>
			<answer id = "a11y" triggerFile="DrinkingFollowup.xml" triggerName="DRINKING_FOLLOWUP" triggerTimes="30 m, 60 m, 120 m">yes</answer>
			<answer id = "a11n">no</answer>
		</question>
	</category>
	<category>	
		<description>Recent Smoking</description>
		<question id= "q21" type = "radio">
			<text>Have you SMOKED A CIGARETTE in the PAST 15 MINUTES?</text>
			<answer id = "a21y">yes</answer>
			<answer id = "a21n" skip="q51">no</answer>
		</question>
	</category>
	
	<externalsource baseid="q3" filename="SmokingMotivation.xml"></externalsource>
	<externalsource baseid="q4" filename="SmokingEffects.xml"></externalsource>	
	<externalsource baseid="q5" filename="MoodSubset.xml"></externalsource>

	<category>
		<description>Life Events/Experiences</description>
	    <questionblock type="radioinput">
		    <description>Cigarette expectancy/motivation items</description>
		    <answer id="y" action="extrainput">Yes</answer>
		    <answer id="n">No</answer>
		    <text id="q60">Since the last prompt have you had a disagreement (and with whom)?</text>
			<text id="q61">Since the last prompt have you felt rejected (and by whom)?</text>
			<text id="q62">Since the last prompt have you felt complimented or praised (and by whom)?</text>										    
			<text id="q63">Since the last prompt have you felt "let down" by someone I depend on?</text>
			<text id="q64">Since the last prompt have you experienced a loss?</text>
			<text id="q65">Received bad/good news?</text>	
			<text id="q66">Slept (and for how long)?</text>
			<text id="q67">Used caffeine (and how much)?</text>			
			<text id="q68">Used over the counter-medications(what and how much)?</text>	
		</questionblock>		
		<question id="q69" type="radioinput">
			<text>Taken your medications as prescribed(if no, log changes)?</text>	
		    <answer id="y">Yes</answer>
		    <answer id="n" action="extrainput">no</answer>
		</question>	
	    
	</category>
			
	<externalsource baseid="q7" filename="CravingsAndSymptomsSubset.xml"></externalsource>
	<externalsource baseid="q8" filename="SituationAndSetting.xml"></externalsource>   
</root>